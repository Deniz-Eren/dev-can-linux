node('jenkins_agent') {

    def buildpath = "/var/tmp/$NODE_NAME";

    try {
        stage('checkout and setup dev environment') {
            sh(script: """
                rm -rf $buildpath
                mkdir -p $buildpath
            """)

            checkout([$class: 'GitSCM',
                branches: [[name: '*/main']],
                extensions: [[$class: 'RelativeTargetDirectory',
                    relativeTargetDir: "$buildpath/dev-can-linux/"]],
                userRemoteConfigs: [[
                    credentialsId: '',
                    url: '/opt/dev-can-linux'
                ]]])

            def publisher = LastChanges.getLastChangesPublisher \
                null, "SIDE", "LINE", true, true, \
                "", "", "", "$buildpath/dev-can-linux", ""

            publisher.publishLastChanges()

            sh(script: """
                /opt/dev-can-linux/ci/jenkins/scripts/setup-dev-environment.sh \
                    -i /home/jenkins/Images \
                    -r /opt/dev-can-linux
            """)
        }

        stage('[UTC] Unit testing (with coverage)') {
            sh(script: """
                /opt/dev-can-linux/ci/jenkins/scripts/start-emulation.sh \
                    -i /home/jenkins/Images \
                    -d mioe3680_pci

                docker exec --user root --workdir /root dev_env bash -c \
                    "source .profile \
                    && /root/dev-can-linux/dev/setup-profile.sh \
                    && mkdir -p build_qcc_unit \
                    && cd build_qcc_unit \
                    && cmake -DCMAKE_BUILD_TYPE=Coverage \
                        /root/dev-can-linux \
                    && make -j8 \
                    && ctest --output-junit test_results.xml || (exit 0)"

                /opt/dev-can-linux/ci/jenkins/scripts/stop-emulation.sh

                rm -rf $WORKSPACE/test-coverage-ut
                rm -rf $WORKSPACE/test_results.xml

                docker cp \
                    dev_env:/root/build_qcc_unit/tests/test-coverage \
                        $WORKSPACE/test-coverage-ut

                docker cp \
                    dev_env:/root/build_qcc_unit/test_results.xml \
                        $WORKSPACE/test_results.xml
            """)

            junit('test_results.xml')

            publishHTML(target : [allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'test-coverage-ut',
                reportFiles: 'index.html',
                reportName: 'UTC Report',
                reportTitles: 'UTC Report'])
        }

        stage('[ITC] integration testing (with coverage)') {
            sh(script: """
                rm -rf /data/home/root/build_qcc_coverage

                /opt/dev-can-linux/ci/jenkins/scripts/start-emulation.sh \
                    -i /home/jenkins/Images \
                    -d mioe3680_pci

                /opt/dev-can-linux/ci/jenkins/scripts/integration-testing.sh \
                    -v \
                    -b /data/home/root/build_qcc_coverage \
                    -t Coverage \
                    -r 10

                docker exec --user root --workdir /root dev_env bash -c \
                    "source .profile \
                    && /root/dev-can-linux/dev/setup-profile.sh \
                    && cd /data/home/root/build_qcc_coverage \
                    && lcov --gcov-tool=\\\$QNX_HOST/usr/bin/ntox86_64-gcov \
                        -t \"test_coverage_results\" -o tests.info \
                        -c -d /data/home/root/build_qcc_coverage \
                        --base-directory=/root/dev-can-linux \
                        --no-external --quiet \
                    && genhtml -o /data/home/root/build_qcc_coverage/cov-html \
                        tests.info --quiet"

                /opt/dev-can-linux/ci/jenkins/scripts/stop-emulation.sh

                rm -rf $WORKSPACE/test-coverage-qcc

                docker cp \
                    dev_env:/data/home/root/build_qcc_coverage/cov-html \
                        $WORKSPACE/test-coverage-qcc
            """)

            publishHTML(target : [allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'test-coverage-qcc',
                reportFiles: 'index.html',
                reportName: 'ITC Report',
                reportTitles: 'ITC Report'])
        }

        stage('[ITP] integration testing (with profiling)') {
            sh(script: '''
                rm -rf $WORKSPACE/valgrind-*.xml

                /opt/dev-can-linux/ci/jenkins/scripts/start-emulation.sh \
                    -i /home/jenkins/Images \
                    -d mioe3680_pci

                #
                # Run Valgrind with tool memcheck
                #
                rm -rf /data/home/root/build_memcheck

                export QNX_PREFIX_CMD="valgrind \
                    --tool=memcheck \
                    --leak-check=full \
                    --show-leak-kinds=all \
                    --track-origins=yes \
                    --verbose \
                    --xml=yes --xml-file=valgrind-memcheck.xml"

                /opt/dev-can-linux/ci/jenkins/scripts/integration-testing.sh \
                    -v \
                    -b /data/home/root/build_memcheck \
                    -t Profiling \
                    -k memcheck-amd64-nto \
                    -s 1 \
                    -r 10

                docker cp \
                    dev_env:/data/home/root/build_memcheck/valgrind-memcheck.xml \
                    $WORKSPACE/

                #
                # Run Valgrind with tool helgrind
                #
                rm -rf /data/home/root/build_helgrind

                export QNX_PREFIX_CMD="valgrind \
                    --tool=helgrind \
                    --history-level=full \
                    --conflict-cache-size=5000000 \
                    --verbose \
                    --xml=yes --xml-file=valgrind-helgrind.xml"

                /opt/dev-can-linux/ci/jenkins/scripts/integration-testing.sh \
                    -v \
                    -b /data/home/root/build_helgrind \
                    -t Profiling \
                    -k helgrind-amd64-nto \
                    -s 1 \
                    -r 10

                docker cp \
                    dev_env:/data/home/root/build_helgrind/valgrind-helgrind.xml \
                    $WORKSPACE/

                #
                # Run Valgrind with tool drd
                #
                rm -rf /data/home/root/build_drd

                export QNX_PREFIX_CMD="valgrind \
                    --tool=drd \
                    --verbose \
                    --xml=yes --xml-file=valgrind-drd.xml"

                /opt/dev-can-linux/ci/jenkins/scripts/integration-testing.sh \
                    -v \
                    -b /data/home/root/build_drd \
                    -t Profiling \
                    -k drd-amd64-nto \
                    -s 1 \
                    -r 10

                docker cp \
                    dev_env:/data/home/root/build_drd/valgrind-drd.xml \
                    $WORKSPACE/

                #
                # Run Valgrind with tool exp-sgcheck
                #
                rm -rf /data/home/root/build_exp-sgcheck

                export QNX_PREFIX_CMD="valgrind \
                    --tool=exp-sgcheck \
                    --verbose \
                    --xml=yes --xml-file=valgrind-exp-sgcheck.xml"

                /opt/dev-can-linux/ci/jenkins/scripts/integration-testing.sh \
                    -v \
                    -b /data/home/root/build_exp-sgcheck \
                    -t Profiling \
                    -k exp-sgcheck-amd64-nto \
                    -s 1 \
                    -r 10

                docker cp \
                    dev_env:/data/home/root/build_exp-sgcheck/valgrind-exp-sgcheck.xml \
                    $WORKSPACE/

                /opt/dev-can-linux/ci/jenkins/scripts/stop-emulation.sh

                # Have a copy of the repository in the workspace so Valgrind
                # source-code displays works
                rm -rf $WORKSPACE/dev-can-linux
                cp -r /opt/dev-can-linux $WORKSPACE/
            ''')

            publishValgrind(pattern: 'valgrind-*.xml',
                sourceSubstitutionPaths: '/root/dev-can-linux:dev-can-linux')
        }

        stage('release') {
            sh(script: """
                docker exec --user root --workdir /root dev_env \
                    bash -c "source .profile \
                        && /root/dev-can-linux/dev/setup-profile.sh \
                        && mkdir -p build_release \
                        && cd build_release \
                        && cmake -DCMAKE_BUILD_TYPE=Release \
                                ../dev-can-linux \
                        && make -j8 \
                        && cpack \
                        && DIR=\\\"Release/dev-can-linux/\\\$(date \\\"+%Y-%m-%d-%H%M%S%Z\\\")\\\" \
                        && mkdir -p \\\"\\\$DIR\\\" \
                        && cp dev-can-linux-*.tar.gz \\\"\\\$DIR\\\""

                docker cp \
                    dev_env:/root/build_release/Release/dev-can-linux \
                    /var/Release/
            """)
        }
    }
    catch (err) {
        currentBuild.result = 'FAILURE'
    }
    finally {
        stage('clean-up') {
            sh(script: """
                docker stop dev_env
                docker rm dev_env

                rm -rf $buildpath
            """)
        }
    }
}
